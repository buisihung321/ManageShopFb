@model IEnumerable<ManageShop.Models.OrderDetail>
@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<table id="orderDetails" class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>Quantity Name</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Order Id</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var od in Model)
        {
        <tr>
            <td><a href="http://localhost:51382/Product/SearchPaging?searchBy=id&searchValue=@od.ProductId">@od.ProductName</a></td>
            <td>@od.Quantity</td>
            <td>@od.UnitPrice</td>
            <td>@od.OrderId</td>
            <td>@od.Amount</td>
        </tr>
        }
    </tbody>
</table>

