@model ManageShop.Models.ViewModel.AlbumDetailViewModel
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ string albumId = Model.AlbumId;}

@section Styles {
    <link href="@Url.Content("~/Content/Album/DetailPage.css")" rel="stylesheet" type="text/css" />
}

@section Scripts
{
    <script>UPLOADCARE_PUBLIC_KEY = '49d4a35ffe4282af4c23';</script>
    <script src="https://ucarecdn.com/libs/widget/3.x/uploadcare.min.js" charset="utf-8"></script>
    <script src="@Url.Content("~/Scripts/Album/Edit.js")"></script>
}

<h2>Detail</h2>
<!-- Modal -->
<div id="add-product__modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form id="add-product-form" action="/Product/Add" method="POST" onsubmit="submitHandler(event)">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Add product</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" name="Name" id="name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="price">Price</label>
                        <input type="number" name="Price" id="price" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="price">Quantity</label>
                        <input type="number" name="Quantity" id="price" class="form-control" />
                    </div>
                    <div class="d-flex">
                        <label>Image: </label>
                        <div class="mx-2">
                            <input type="hidden" role="uploadcare-uploader" id="uploadedImage" />
                        </div>
                    </div>
                    <input type="hidden" value="@albumId" name="AlbumId" />
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </form>
    </div>
</div>


<div id="edit_modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit product</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form class="modal-body" action="/Product/Update" method="POST">
                <img id="product-photo" src=""
                     width="100%" height="180"
                     alt="Alternate Text" />
                <div id="edit-product-container">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" name="Name" id="name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="price">Price</label>
                        <input type="number" name="Price" id="price" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="price">Quantity</label>
                        <input type="number" name="Quantity" id="quantity" class="form-control" />
                    </div>
                    <input type="hidden" value="" name="AlbumId" />
                    <input type="hidden" value="" name="PhotoUUID" />
                    <button id="submit-edit__btn" class="btn btn-primary">Save</button>
                </div>
            </form>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<div id="product-container" class="d-flex flex-row flex-wrap">
    @foreach (var product in Model.Products)
    {

        //PRODUCT FORM
        <div class="card mx-2 my-2 shadow product-card" style="width: 18rem;">
            <img src="https://ucarecdn.com/@product.PhotoUUID/-/preview/950x950/-/filter/sorlen/-34/"
                 width="100%" height="180"
                 alt="Alternate Text" />
            @*<svg class="bd-placeholder-img card-img-top" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Image cap"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"></rect><text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text></svg>*@
            <div class="card-body">
                @*SHOW INFO DIV*@
                <div id="info-container">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">
                        Price: $@product.Price
                    </p>
                    <p class="card-text">
                        Quantity: @product.Quantity
                    </p>
                </div>
            </div>
            <div class="card-footer text-right">
                @*TRIGGER EDIT PRODUCT MODE*@
                <button class="btn btn-secondary edit__btn" data-uuid="@product.PhotoUUID">Edit</button>
                @Html.ActionLink("Remove product", "Remove", "Product", new { uuid = product.PhotoUUID }, new { @class = "btn btn-danger delete-link" })
            </div>
        </div>


    }
    <div class="text-center  mx-2 my-2 ">
        <!-- Button trigger ADD NEW ALBUM modal -->
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#add-product__modal">
            Add new 🖼for this Album
        </button>
    </div>
</div>




