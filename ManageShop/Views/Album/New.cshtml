@model ManageShop.Models.Album
@{
    ViewBag.Title = "New Album";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create new Album:</h2>

@using (Html.BeginForm("Save", "Album"))
{
    <div class="form-group">
        @Html.LabelFor(al => al.Name)
        @Html.TextBoxFor(al => al.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(al => al.Description)
        @Html.TextBoxFor(al => al.Description, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}

