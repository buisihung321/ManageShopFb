@model IEnumerable<ManageShop.Models.Album>
@{
    ViewBag.Title = "Albums";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="@Url.Content("~/Content/Album/IndexPage.css")" rel="stylesheet" type="text/css" />
}

@section Scripts
{
    <script>UPLOADCARE_PUBLIC_KEY = '49d4a35ffe4282af4c23';</script>
    <script src="https://ucarecdn.com/libs/widget/3.x/uploadcare.min.js" charset="utf-8"></script>
    <script src="@Url.Content("~/Scripts/Album/Index.js")"></script>
}

<div class="album-container">
    <h2>Albums List:</h2>
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" >
        Add order for this album
    </button>

    <!-- Modal Add new Album-->
    <div class="modal fade" id="albumModal" tabindex="-1" role="dialog" aria-labelledby="albumModalLabel" aria-hidden="true">
        <div id="album-modal" class="modal-dialog modal-xl" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="albumModalLabel">Add new Album</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <div class="container">
                        <div class="row">
                            @*LEFT ROW*@
                            <div id="album-wrapper" class="col-12 col-lg-2">
                                <input type="hidden" name="PhotoCover" value="" />
                                <div>
                                    <input id="album-name-input" type="text"
                                           name="Name" placeholder="Album name" value="" class="form-control " />
                                </div>
                                <div>
                                    <input id="album-name-input" type="text"
                                           name="AlbumId" placeholder="AlbumId" value="" class="form-control " />
                                </div>
                                <div>
                                    <textarea id="album-desc-input" class="form-control"
                                              name="Description" placeholder="Description" rows="6"></textarea>
                                </div>
                            </div>

                            @*RIGHT ROW*@

                            <div id="product-container" class="col-12 col-lg-10 d-flex row justify-content-center">
                                <div class="card m-2 shadow" id="uploadBtn">
                                    <input type="hidden" data-clearable role="uploadcare-uploader" id="uploadedImage" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button id="save-album__btn" type="button" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>


    <!-- Album Lists -->

    <div id="album-wrapper" class="d-flex flex-row flex-wrap align-items-center">
        @foreach (var album in Model)
        {
            <div class="card album-card mx-2 my-2" style="width: 18rem;">
                <img src="https://ucarecdn.com/@album.PhotoCover/-/preview/950x950/-/filter/sorlen/-34/"
                     class="card-img-top" width="100%" height="180"
                     alt="Image Top" />
                @*<svg class="bd-placeholder-img card-img-top" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Image cap"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"></rect><text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text></svg>*@
                <div class="card-body text-right">
                    <h5 class="card-title">@album.Name</h5>
                    <p class="card-text">@album.Description</p>
                    @Html.ActionLink("Detail", "Edit", "Album", new { albumId = album.AlbumId }, new { @class = "btn btn-secondary btn-sm" })
                    @if (!album.HasPosted)
                    {
                        <a href="#" class="btn btn-primary btn-sm">Post on FB</a>
                    }
                    else
                    {
                        <button href="#" class="btn btn-success btn-sm" disabled>Posted</button>
                    }
                    <a href="/Album/Remove/@album.Id" class="btn btn-danger btn-sm delete-link">Delete Album</a>
                </div>
            </div>
        }
        <div class="text-center mx-2 my-2 ">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#albumModal">
                Add new album
            </button>
        </div>
    </div>

</div>



